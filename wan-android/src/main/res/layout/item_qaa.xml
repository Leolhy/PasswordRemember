<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTabSel">

    <TextView
        android:id="@+id/item_qaa_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTextTitle"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="是飒飒是打算打打实打实盛世新城这个跟" />

    <TextView
        android:id="@+id/item_qaa_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/bottom"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/item_qaa_title"
        app:layout_constraintRight_toLeftOf="@id/item_qaa_time"
        app:layout_constraintTop_toBottomOf="@id/item_qaa_title"
        tools:text="作者:xxxxx" />

    <TextView
        android:id="@+id/item_qaa_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/item_qaa_author"
        app:layout_constraintRight_toRightOf="@id/item_qaa_title"
        app:layout_constraintTop_toTopOf="@id/item_qaa_author"
        tools:text="时间:xxxxxxxxx" />

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorTabNor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_qaa_author" />
</androidx.constraintlayout.widget.ConstraintLayout>